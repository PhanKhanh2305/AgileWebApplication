@using AgileWebApplication.Models.ViewModels
@model ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="latest-products spad">
    <div class="container">
        @await Component.InvokeAsync("CategoryFilter")

        <div class="row" id="product-list">
            @foreach(var item in Model.Products)
            {
                <div class="col-lg-3 col-sm-6 mix all dresses bags">
                    <div class="single-product-item">
                        <figure>
                            <a href="/Products/Details/@item.ProductId"><img src="@item.ProductPhoto" alt=""></a>
                            <div class="p-status">Details</div>
                        </figure>
                        <div class="product-text">
                            <h6>@item.ProductName</h6>
                            <p>$@item.ProductPrice</p>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-12">
                <div class="pageination">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.PagingInfo.TotalPage; i++)
                            {
                                <li class="page-item"><a class="page-link" href="/Products/?productpage=@i">@i</a></li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
